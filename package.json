{
  "name": "express-ts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run build",
    "start": "run-p dev:*",
    "dev:server": "cross-env NODE_ENV=development nodemon dist/server",
    "dev:watch": "cross-env NODE_ENV=development webpack --progress --config tools/webpack/server/index.ts -w",
    "dev:browser-sync": "browser-sync start --proxy 'localhost:4000' --files 'dist'",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production webpack --progress --config tools/webpack/server/index.ts",
    "clean": "rimraf -g dist",
    "tsc": "tsc"
  },
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/node": "^9.4.7",
    "@types/webpack": "^4.1.1",
    "awesome-typescript-loader": "^4.0.1",
    "browser-sync": "^2.23.6",
    "cross-env": "^5.1.4",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2",
    "webpack": "^3"
  }
}
